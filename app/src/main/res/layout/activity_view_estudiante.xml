<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.ViewEstudiante"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estudiante"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/jbtnUnirme"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:text="Unirme a una clase"
        app:backgroundTint="#4EBF52"
        android:onClick="UnirmeAUnaClase"/>

    <Button
        android:id="@+id/jbtnClases"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:onClick="misClases"
        android:text="Mis clases" />

    <Button
        android:id="@+id/jbtnEditarPerfil"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:text="Editar perfil"
        app:backgroundTint="#D53535" />

</LinearLayout>