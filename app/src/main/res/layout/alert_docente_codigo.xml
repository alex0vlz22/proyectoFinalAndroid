<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/shield" />

    <TextView
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Has elegido la opción 'docente', por favor diligencia el código de seguridad y prosigue con el registro."
        android:textColor="@color/black"/>

    <EditText
        android:inputType="textPassword"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Ej: A7XMS7XD3"
        android:id="@+id/jtxtCodigo"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_primary"
        android:text="Validar"
        style="@style/Animation.Design.BottomSheetDialog"
        android:id="@+id/jbtnValidar"/>

</LinearLayout>