<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1900px"
    tools:context=".Vista.ViewForoDocente"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1900px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1899px"
            android:orientation="vertical">

            <!-- Contenido, tÃ­tulos y listas. -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ya han participado"
                android:textColor="@color/black"
                android:textSize="32px"
                android:layout_marginBottom="30px"
                android:gravity="center_horizontal" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="260px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260px"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/jlstYaHanParticipado"
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:scrollbarSize="2px"/>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faltan por participar"
                android:layout_marginTop="40px"
                android:textColor="@color/black"
                android:textSize="32px"
                android:layout_marginBottom="30px"
                android:gravity="center_horizontal"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="260px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260px"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/jlstFaltanPorParticipar"
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:scrollbarSize="2px"/>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participaciones"
                android:layout_marginTop="40px"
                android:textColor="@color/black"
                android:textSize="32px"
                android:layout_marginBottom="30px"
                android:gravity="center_horizontal" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300px"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/jlstParticipaciones"
                        android:layout_width="match_parent"
                        android:layout_height="300px"
                        android:scrollbarSize="2px"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>